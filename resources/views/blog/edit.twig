{% extends "layout.twig" %}

{% block additional_styles %}
    <style>
        body {
            color: #373737;
        }

        textarea,iframe{
            width:100%;
            height:100vh;
            border: none;
        }

        input {
            width: 100%;
            border: none;
            border-bottom: 1px dotted #a8a8a8;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block content %}
    <div id="content" class="container-fluid editor">
        <div id="page-header">
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-2-3">
                    <input type="hidden" name="post-id" id="post-id" value="{{ post.id }}">
                    <input type="hidden" name="post-author" id="post-author" value="{{ post.author }}">
                    <h1>
                        <label for="post-title"></label>
                        <input type="text" name="post-title" id="post-title" class="post-title" placeholder="Insert title here..."
                               value="{{ post.title }}">
                    </h1>
                </div>
                <div class="pure-u-1 pure-u-md-1-3 justify-center">
                    <button class="form-submit swal-button swal-button--confirm" type="submit" onclick="blog.submitPost(true)">save</button>
                </div>
            </div>
        </div>
        <div class="pure-g">
            <div class="pure-u-1 pure-u-md-1-1">
                <label for="h"></label>
                <textarea class="edit-content" placeholder="Start writing HTML here..." id="h">{{ post.content }}</textarea>
            </div>
        </div>
    </div>
{% endblock %}

{% block additional_scripts %}
    <script>
        $('#h').trumbowyg({
            svgPath: "{{ asset({file: 'icons.svg'}) }}"
        });
    </script>
{% endblock %}
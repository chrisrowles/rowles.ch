{% extends "layout.twig" %}

{% block additional_styles %}
    <style>
        body {
            color: #373737;
        }

        textarea,iframe{
            width:100%;
            height:100vh;
            border: none;
        }

        input {
            width: 100%;
            border: none;
            border-bottom: 1px dotted #a8a8a8;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block content %}
    <div id="content" class="editor container-fluid">
        <div id="page-header">
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-2-3">
                    <input type="hidden" name="post-author" id="post-author" value="Chris Rowles">
                    <h1>
                        <label for="post-title"></label>
                        <input type="text" name="post-title" id="post-title" class="post-title"
                               placeholder="Insert title here..." value="">
                    </h1>
                </div>
                <div class="pure-u-1 pure-u-md-1-3 justify-center">
                    <button class="form-submit swal-button swal-button--confirm" onclick="blog.submitPost(true)"
                            type="submit">save
                    </button>
                </div>
            </div>
        </div>
        <div class="pure-g">
            <div class="pure-u-1 pure-u-md-1">
                <label for=h></label>
                <textarea class="edit-content" placeholder="Start writing HTML here..."
                          id=h></textarea>
            </div>
        </div>
    </div>
{% endblock %}

{% block additional_scripts %}
    <script>
        $('#h').trumbowyg({
            svgPath: "{{ asset({file: 'icons.svg'}) }}"
        });
    </script>
{% endblock %}
{% extends "layout.twig" %}

{% block additional_styles %}
{% endblock %}

{% block content %}
    <div id="content" class="container">
        <div id="page-header">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <div>
                    <h1>Login</h1>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <form class="flex-grow-1" action="/login" method="post">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter email address">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
                </div>
                <div class="w-100 text-right mt-5">
                    <button type="submit" class="form-submit swal-button swal-button--confirm">Submit</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block additional_scripts %}
    {% if session.message is defined %}
        <script>
            app.notify('{{ session.message }}', 'error');
        </script>
        {{ destroy_session() }}
    {% endif %}
{% endblock %}

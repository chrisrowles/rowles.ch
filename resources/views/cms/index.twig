{% extends "layout.twig" %}
{% block content %}
    <div id="content" class="container pt-3 pt-md-0">
        <h1 class="mt-3">Simple CMS</h1>

        <div class="card mt-3">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Contact Details</h5>
                <a href="/cms/contact-detail/create" class="btn btn-sm btn-success">
                    Add New
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Link</th>
                            <th>Text</th>
                            <th>Sort Order</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contact in contactDetails %}
                            <tr>
                                <td>{{ contact.id }}</td>
                                <td>{{ contact.title }}</td>
                                <td><a href="{{ contact.link }}">{{ contact.link }}</a></td>
                                <td>{{ contact.text }}</td>
                                <td>{{ contact.sortOrder }}</td>
                                <td class="d-flex align-items-center gap-2">
                                    <a href="/cms/contact-detail/edit/{{ contact.id }}" class="btn btn-sm btn-secondary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="/cms/contact-detail/delete/{{ contact.id }}" method="POST">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card mt-5">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Employment History</h5>
                <a href="/cms/employment-history/create/" class="btn btn-sm btn-success">
                    Add New
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Link</th>
                            <th>Text</th>
                            <th>Sort Order</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for job in employmentHistory %}
                            <tr>
                                <td>{{ job.id }}</td>
                                <td>{{ job.employer }}</td>
                                <td>{{ job.position }}</td>
                                <td>{{ job.time }}</td>
                                <td>{{ job.sortOrder }}</td>
                                <td class="d-flex align-items-center gap-2">
                                    <a href="/cms/employment-history/edit/{{ job.id }}" class="btn btn-sm btn-secondary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="/cms/employment-history/delete/{{ job.id }}" method="POST">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        
    </div>
{% endblock %}